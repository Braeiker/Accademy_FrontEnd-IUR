@page "/Home"

@using IUR.Service


@inject UserDTO User

<PageTitle>Home</PageTitle>

<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

<div class="hero-section">
    <div class="hero-content">
        <h1>Welcome to Your Learning Platform</h1>
        <p>Explore a variety of courses and stay updated with the latest news.</p>
        <NavLink href="/Course" class="explore-btn">
            <span class="material-icons">explore</span>
            Explore Courses
        </NavLink>
    </div>
</div>



@code {
  

   

    private string GetCourseIcon(string courseName)
    {
        return courseName switch
        {
            "Introduction to Architecture" => "location_city",
            "Data Structures and Algorithms" => "memory",
            "Principles of Marketing" => "trending_up",
            _ => "school"
        };
    }
}

<style>
    body {
        margin: 0;
        font-family: 'Roboto', sans-serif;
        background-color: #f4f4f9;
        color: #333;
    }

    p {
        font-family: 'Roboto', sans-serif;
        font-weight: 400;
        color: #ffffff;
        margin-bottom: 20px;
    }

    .hero-section {
        background: linear-gradient(135deg, #192441, #4b6cb7);
        padding: 60px 20px;
        text-align: center;
        color: #ffffff;
    }

    .hero-content {
        max-width: 600px;
        margin: 0 auto;
    }

    .hero-content h1 {
        font-size: 2.5rem;
        margin-bottom: 10px;
    }

    .hero-content p {
        font-size: 1.2rem;
        margin-bottom: 20px;
    }

    .explore-btn {
        background-color: #ffffff;
        color: #192441;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        transition: background-color 0.3s ease, transform 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 5px;
        font-weight: bold;
    }

    .explore-btn:hover {
        background-color: #f0f0f0;
        transform: scale(1.05);
    }

    .course-section, .news-section {
        padding: 40px 20px;
        text-align: center;
        background-color: #ffffff;
    }

    .course-section h2, .news-section h2 {
        font-size: 2rem;
        margin-bottom: 20px;
        color: #192441;
    }

    .course-cards, .news-cards {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 20px;
    }

    .course-card, .news-card {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        width: 300px;
        text-align: left;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        position: relative;
    }

    .course-card:hover, .news-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }

    .course-card h3, .news-card h3 {
        font-size: 1.5rem;
        margin-bottom: 10px;
        color: #192441;
    }

    .course-link, .news-link {
        display: inline-block;
        margin-top: 10px;
        color: #007bff;
        text-decoration: none;
        font-weight: bold;
        transition: color 0.3s;
    }

    .course-link:hover, .news-link:hover {
        text-decoration: underline;
        color: #0056b3;
    }

    .course-icon, .news-icon {
        font-size: 2rem;
        color: #192441;
        margin-bottom: 10px;
    }

    .media (max-width: 768px) {
        .course-card, .news-card {
            width: 90%;
            padding: 15px;
        }
    }

    .media (max-width: 480px) {
        .course-cards, .news-cards {
            flex-direction: column;
            gap: 15px;
        }

        .course-card, .news-card {
            width: 100%;
        }
    }
</style>

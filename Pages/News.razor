<PageTitle>News</PageTitle>

<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">


@code {
   
}
<style>
    body {
        margin: 0;
        font-family: 'Roboto', sans-serif;
        background-color: #f4f4f9;
        color: #333;
    }

    .news-container {
        padding: 40px 20px;
        max-width: 1200px;
        margin: 0 auto;
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .news-container h1 {
        font-size: 2.5rem;
        margin-bottom: 20px;
        color: #192441;
    }

    .news-cards {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
    }

    .news-card {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        width: 300px;
        text-align: left;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        position: relative;
    }

    .news-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }

    .news-card h3 {
        font-size: 1.5rem;
        margin-bottom: 10px;
        color: #192441;
    }

    .news-card p {
        font-size: 0.9rem;
        color: #555;
    }

    .published-date {
        margin: 10px 0;
        font-size: 0.8rem;
        color: #777;
    }

    .news-link {
        display: inline-block;
        margin-top: 10px;
        color: #007bff;
        text-decoration: none;
        font-weight: bold;
        transition: color 0.3s, text-decoration 0.3s;
    }

    .news-link:hover {
        text-decoration: underline;
        color: #0056b3;
    }

    .news-icon {
        font-size: 2rem;
        color: #192441;
        margin-bottom: 10px;
    }

    .media (max-width: 768px) {
        .news-card {
            width: 90%;
            padding: 15px;
        }
    }

    .media (max-width: 480px) {
        .news-cards {
            flex-direction: column;
            gap: 15px;
        }

        .news-card {
            width: 100%;
        }
    }
</style>
